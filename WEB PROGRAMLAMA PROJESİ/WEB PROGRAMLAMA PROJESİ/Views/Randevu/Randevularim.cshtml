@model IEnumerable<FitnessApp.Models.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Randevularım</h2>
        <a asp-action="Al" class="btn btn-primary">Yeni Randevu Al</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz hiç randevunuz yok. Hemen bir tane oluşturun!
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih & Saat</th>
                            <th>Antrenör</th>
                            <th>Hizmet</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TarihSaat.ToString("dd MMMM yyyy HH:mm")</td>
                                <td>@item.Antrenor?.AdSoyad</td>
                                <td>@item.Hizmet?.Ad</td>
                                <td>
                                    @if (item.OnaylandiMi)
                                    {
                                        <span class="badge bg-success">Onaylandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>