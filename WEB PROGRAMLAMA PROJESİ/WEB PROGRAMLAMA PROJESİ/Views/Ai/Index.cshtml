@{
    ViewData["Title"] = "AI Antrenör";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-robot"></i> Yapay Zeka Analizi</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label class="form-label">Boy (cm)</label>
                            <input type="number" name="boy" class="form-control" value="@ViewBag.GirisBoy" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Kilo (kg)</label>
                            <input type="number" name="kilo" class="form-control" value="@ViewBag.GirisKilo" required step="0.1" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Cinsiyet</label>
                            <select name="cinsiyet" class="form-control">
                                <option value="Erkek">Erkek</option>
                                <option value="Kadin">Kadın</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Hedef</label>
                            <select name="hedef" class="form-control">
                                <option value="fit">Form Tutmak / Zayıflamak</option>
                                <option value="kas">Kas Yapmak</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 fw-bold">Asistana Sor 🤖</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            @if (ViewBag.SonucVar == true)
            {
                <div class="card shadow border-0 h-100">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Gemini AI Analizi</h4>
                        <span class="badge bg-warning text-dark">Destekli</span>
                    </div>
                    <div class="card-body">

                        @if (!string.IsNullOrEmpty(ViewBag.ResimUrl))
                        {
                            <div class="mb-4 text-center">
                                <img src="@ViewBag.ResimUrl" class="img-fluid rounded shadow-sm border" style="max-height: 300px; object-fit: cover;">
                            </div>
                        }

                        <div class="p-3 bg-light rounded border">
                            @if (ViewBag.SonucMetni != null)
                            {
                                @Html.Raw(ViewBag.SonucMetni)
                            }
                            else
                            {
                                <span class="text-danger">Sonuç hesaplanamadı.</span>
                            }
                        </div>

                        <div class="mt-4 text-center">
                            <a asp-controller="Randevu" asp-action="Al" class="btn btn-outline-dark">
                                <i class="bi bi-calendar-check"></i> Hemen Program Yapalım
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex align-items-center justify-content-center h-100 bg-light rounded text-center p-5">
                    <div>
                        <h1 class="display-4 text-muted"><i class="bi bi-robot"></i></h1>
                        <p class="text-muted">Bilgilerini gir, programını al.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>