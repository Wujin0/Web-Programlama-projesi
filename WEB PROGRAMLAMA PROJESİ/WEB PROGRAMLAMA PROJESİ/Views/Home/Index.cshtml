@model FitnessApp.Models.HomeViewModel

@{
    ViewData["Title"] = "Anasayfa";
}

<style>
    body {
        /* Koyu Altın Sarısı Gradyan Geçişi */
        background: linear-gradient(135deg, #B8860B 0%, #8B6508 100%) !important;
        background-attachment: fixed; /* Arka plan sabit kalsın */
    }

    /* Yazıların altın zemin üstünde okunması için gölge */
    h2.text-white {
        text-shadow: 2px 2px 4px rgba(0,0,0,0.6);
    }
</style>

<div class="p-5 mb-4 rounded-3 text-white border border-warning shadow-lg" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://planla.co/blog/content/images/size/w1000/2024/09/fit-1.jpg'); background-size: cover; background-position: center;">
    <div class="container-fluid py-5">
        <h1 class="display-4 fw-bold text-white" style="text-shadow: 2px 2px 4px black;">Potansiyelini Keşfet</h1>
        <p class="col-md-8 fs-4 text-white">Uzman antrenörler ve profesyonel ekipmanlarla hedefine ulaş. Yapay zeka destekli programlarımızla tanış.</p>

        @if (!(User?.Identity?.IsAuthenticated == true))
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-warning btn-lg fw-bold me-2 text-dark shadow">Üye Ol</a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg text-white shadow">Giriş Yap</a>
        }
        else
        {
            <a asp-controller="Randevu" asp-action="Al" class="btn btn-success btn-lg fw-bold shadow">Randevu Al</a>
        }
    </div>
</div>

<div class="container mb-5">
    <h2 class="text-center mb-4 text-white fw-bold">Hizmetlerimiz</h2>
    <div class="row text-center">
        @if (Model.Hizmetler != null && Model.Hizmetler.Any())
        {
            @foreach (var hizmet in Model.Hizmetler)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-lg border-0" style="background-color: #fff;">
                        <div class="card-body">
                            <div class="fs-1 text-warning mb-3">
                                <i class="bi bi-activity"></i>
                            </div>
                            <h3 class="card-title fw-bold text-dark">@hizmet.Ad</h3>
                            <p class="card-text text-muted">Süre: @hizmet.SureDk dk</p>
                            <h4 class="text-success fw-bold">@hizmet.Ucret ₺</h4>
                        </div>
                        <div class="card-footer bg-transparent border-0 mb-3">
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="Randevu" asp-action="Al" class="btn btn-outline-warning w-100 fw-bold text-dark">Randevu Al</a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-light text-center shadow">Henüz eklenmiş bir hizmet yok. Admin panelinden ekleyiniz.</div>
        }
    </div>
</div>

<div class="container mb-5">
    <h2 class="text-center mb-4 text-white fw-bold">Uzman Kadromuz</h2>
    <div class="row">
        @if (Model.Egitmenler != null && Model.Egitmenler.Any())
        {
            @foreach (var hoca in Model.Egitmenler)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card shadow-lg h-100 border-0">
                        @if (!string.IsNullOrEmpty(hoca.FotoUrl))
                        {
                            <img src="@hoca.FotoUrl" class="card-img-top" alt="@hoca.AdSoyad" style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/250x250?text=Antrenor" class="card-img-top" style="height: 250px; object-fit: cover;">
                        }

                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold mb-1 text-dark">@hoca.AdSoyad</h5>
                            <span class="badge bg-warning text-dark mb-3">@hoca.UzmanlikAlani</span>

                            <div class="d-flex justify-content-center align-items-center bg-light p-2 rounded mt-2 border">
                                <i class="bi bi-clock-fill text-warning me-2"></i>
                                <span class="fw-bold text-muted small">@hoca.CalismaSaatiBaslangic - @hoca.CalismaSaatiBitis</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-light text-center shadow">Henüz eğitmen eklenmemiş.</div>
        }
    </div>
</div>

<div class="bg-dark p-5 rounded-3 mb-5 border border-warning shadow-lg">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h2 class="fw-bold text-warning">Yapay Zeka Destekli Program</h2>
            <p class="lead text-white opacity-75">Vücut ölçülerini gir, Google Gemini sana en uygun programı çıkarsın.</p>
        </div>
        <div class="col-md-4 text-end">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Ai" asp-action="Index" class="btn btn-warning btn-lg fw-bold shadow">
                    <i class="bi bi-robot"></i> Asistana Sor
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">Giriş Yap</a>
            }
        </div>
    </div>
</div>
</div>