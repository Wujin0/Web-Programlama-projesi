@model FitnessApp.Models.Hizmet

@{
    ViewData["Title"] = "Düzenle";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Hizmeti Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="HizmetId" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Hizmet Adı</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Süre (Dakika)</label>
                        <input asp-for="SureDk" class="form-control" />
                        <span asp-validation-for="SureDk" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Ücret (TL)</label>
                        <input asp-for="Ucret" class="form-control" />
                        <span asp-validation-for="Ucret" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-block mt-3">
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-save"></i> Değişiklikleri Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left"></i> Vazgeç / Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>