@model FitnessApp.Models.Hizmet

@{
    ViewData["Title"] = "Sil";
}

<div class="container mt-4">
    <div class="alert alert-danger shadow-sm">
        <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Bu hizmeti silmek istediğinize emin misiniz?</h3>
        <p class="mb-0 mt-2">Bu işlem geri alınamaz.</p>
    </div>

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0">Silinecek Hizmet Bilgileri</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-2">Hizmet Adı:</dt>
                <dd class="col-sm-10 fw-bold">@Html.DisplayFor(model => model.Ad)</dd>

                <dt class="col-sm-2">Süre:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.SureDk) Dakika</dd>

                <dt class="col-sm-2">Ücret:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Ucret) TL</dd>
            </dl>
        </div>
        <div class="card-footer bg-white border-0">
            <form asp-action="Delete">
                <input type="hidden" asp-for="HizmetId" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash-fill"></i> Evet, Sil
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">İptal / Listeye Dön</a>
            </form>
        </div>
    </div>
</div>