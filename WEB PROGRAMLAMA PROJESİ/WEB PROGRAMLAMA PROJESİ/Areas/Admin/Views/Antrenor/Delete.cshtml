@model FitnessApp.Models.Antrenor

@{
    ViewData["Title"] = "Sil";
}

<div class="container mt-4">
    <div class="alert alert-danger shadow-sm">
        <h3 class="mb-0"><i class="bi bi-exclamation-octagon-fill"></i> Bu antrenörü silmek üzeresiniz!</h3>
        <p class="mb-0 mt-2">Bu işlem geri alınamaz.</p>
    </div>

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0">Silinecek Kişi</h4>
        </div>
        <div class="card-body text-center">
            @if (!string.IsNullOrEmpty(Model.FotoUrl))
            {
                <img src="@Model.FotoUrl" class="rounded-circle shadow mb-3" width="150" height="150" style="object-fit:cover;" />
            }

            <h3 class="fw-bold">@Html.DisplayFor(model => model.AdSoyad)</h3>
            <p class="text-muted fs-5">@Html.DisplayFor(model => model.UzmanlikAlani)</p>
        </div>
        <div class="card-footer bg-white border-0 text-center pb-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="AntrenorId" />
                <button type="submit" class="btn btn-danger btn-lg px-5">
                    <i class="bi bi-trash-fill"></i> Evet, Sil
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">İptal</a>
            </form>
        </div>
    </div>
</div>