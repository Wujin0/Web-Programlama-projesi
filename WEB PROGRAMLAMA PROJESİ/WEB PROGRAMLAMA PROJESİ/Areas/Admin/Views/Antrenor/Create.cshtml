@model FitnessApp.Models.Antrenor

@{
    ViewData["Title"] = "Yeni Antrenör";
}
// CSS DEĞİŞTİ
<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Yeni Antrenör Ekle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Ad Soyad</label>
                    <input asp-for="AdSoyad" class="form-control" placeholder="Örn: Ahmet Yılmaz" />
                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Uzmanlık Alanı</label>
                    <input asp-for="UzmanlikAlani" class="form-control" placeholder="Örn: Fitness, Pilates" />
                    <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Mesai Başlangıç Saati</label>
                        <input type="time" asp-for="CalismaSaatiBaslangic" class="form-control" />
                        <span asp-validation-for="CalismaSaatiBaslangic" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Mesai Bitiş Saati</label>
                        <input type="time" asp-for="CalismaSaatiBitis" class="form-control" />
                        <span asp-validation-for="CalismaSaatiBitis" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Profil Fotoğrafı</label>
                    <input type="file" name="resimDosyasi" class="form-control" accept="image/*" />
                    <small class="text-muted">Lütfen .jpg veya .png formatında bir resim seçiniz.</small>
                </div>

                <div class="d-grid gap-2 d-md-block">
                    <button type="submit" class="btn btn-success btn-lg px-4">
                        <i class="bi bi-check-lg"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>