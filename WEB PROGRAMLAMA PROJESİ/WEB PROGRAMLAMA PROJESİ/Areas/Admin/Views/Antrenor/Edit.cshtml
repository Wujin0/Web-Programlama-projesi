@model FitnessApp.Models.Antrenor

@{
    ViewData["Title"] = "Düzenle";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Antrenör Bilgilerini Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AntrenorId" />
                <input type="hidden" asp-for="FotoUrl" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Ad Soyad</label>
                    <input asp-for="AdSoyad" class="form-control" />
                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Uzmanlık Alanı</label>
                    <input asp-for="UzmanlikAlani" class="form-control" />
                    <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Mesai Başlangıç</label>
                        <input type="time" asp-for="CalismaSaatiBaslangic" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Mesai Bitiş</label>
                        <input type="time" asp-for="CalismaSaatiBitis" class="form-control" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Fotoğrafı Değiştir (İsteğe Bağlı)</label>
                    <input type="file" name="resimDosyasi" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.FotoUrl))
                    {
                        <div class="mt-2">
                            <small>Mevcut Resim:</small><br />
                            <img src="@Model.FotoUrl" width="100" class="rounded border" />
                        </div>
                    }
                </div>

                <div class="d-grid gap-2 d-md-block">
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-save"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left"></i> Vazgeç
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>